#include <IRremote.h>
int IRpin=6;
IRrecv IR(IRpin);
decode_results cmd;
String myCom;
int red=11;
int green=10;
int blue=9;
int i;
int r;
int j;
int k;
int f;
int a;
int dt=100;
int change=5;


Serial.begin(74880);
IR.enableIRIn();
pinMode(red,OUTPUT);
pinMode(green,OUTPUT);
pinMode(blue,OUTPUT);



if (IR.decode(&cmd)){
    Serial.println(cmd.value, HEX);
    translateIR(); 
    IR.resume(); 
    delay(200); 


void translateIR(){
  switch(cmd.value){
    case 0xFFA25D:
      digitalWrite(red,LOW);
      digitalWrite(green,LOW);
      digitalWrite(blue,LOW);
    break;
    case 0xFF30CF:
      digitalWrite(red,HIGH);
      digitalWrite(green,LOW);
      digitalWrite(blue,LOW);
    break;
    case 0xFF18E7:
      digitalWrite(green,HIGH);
      digitalWrite(red,LOW);
      digitalWrite(blue,LOW);
      break;
    case 0xFF7A85:
      digitalWrite(green,LOW);
      digitalWrite(red,LOW);
      digitalWrite(blue,HIGH); 
    break;
  }
}


