#include <IRremote.h>
int IRpin=6;
IRrecv IR(IRpin);
decode_results cmd;
String myCom;
int red=11;
int green=10;
int blue=9;
int i;
int r;
int cunt;
int k;
int f;
int a;
int dt=100;
int change=5;



Serial.begin(74800);
pinMode(red,OUTPUT);
pinMode(green,OUTPUT);
pinMode(blue,OUTPUT);
IR.enableIRIn();
}

void loop() {
  // put your main code here, to run repeatedly:
while (IR.decode(&cmd)==0){
  
}
Serial.println(cmd.value,HEX);
IR.resume();
//off
if (cmd.value==0xFF6897){
  digitalWrite(red,LOW);
  digitalWrite(green,LOW);
  digitalWrite(blue,LOW);
}
//red
if (cmd.value==0xFF30CF){
  digitalWrite(red,HIGH);
  digitalWrite(green,LOW);
  digitalWrite(blue,LOW);
}
//green
if (cmd.value==0xFF18E7){
  digitalWrite(green,HIGH);
  digitalWrite(red,LOW);
  digitalWrite(blue,LOW);
}
//blue
if (cmd.value==0xFF10EF){
  digitalWrite(green,LOW);
  digitalWrite(red,LOW);
  digitalWrite(blue,HIGH);
  }
}









while (cmd.value==0xFF7A85){
  digitalWrite(green,LOW);
  digitalWrite(blue,LOW);
  digitalWrite(red,HIGH);
for (i=0;i<=250;i=i+change){
  analogWrite(green,i);
  delay(dt);
}
//green on and red ramping down
digitalWrite(green,HIGH);
for (r=250;r>=0;r=r-change){
  analogWrite(red,r);
  delay(dt);
}
//green on and blue ramping up
digitalWrite(green,HIGH);
for (cunt=0;cunt<=250;cunt=cunt+change){
  analogWrite(blue,cunt);
  delay(dt);
}
//Blue on green ramping down
digitalWrite(blue,HIGH);
for (k=250;k>=0;k=k-change){
  analogWrite(green,k);
  delay(dt);
}
//blue on red ramping up
digitalWrite(blue,HIGH);
for (f=0;f<=250;f=f+change){
  analogWrite(red,f);
  delay(dt);
}
//red on blue ramping down
digitalWrite(red,HIGH);
for (a=250;a>=0;a=a-change){
  analogWrite(blue,a);
  delay(dt);
}
digitalWrite(red,HIGH);
delay(1000);
}
